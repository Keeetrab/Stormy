<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="64dp"
                android:paddingRight="32dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                tools:background="@drawable/bg_gradient">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_temperature"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/temperatureLabel"
        android:layout_alignLeft="@+id/temperatureImage"
        android:layout_alignBottom="@+id/temperatureImage"
        android:layout_alignRight="@+id/temperatureImage"
        android:layout_alignTop="@+id/temperatureImage"
        android:gravity="center"
        android:textColor="#f25019"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:layout_toRightOf="@+id/temperatureImage"
        android:layout_toEndOf="@+id/temperatureImage"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:src="@drawable/partly_cloudy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayNameLabel"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:textColor="#ffffff"
        tools:text="Wednesday"
        android:paddingLeft="10dp"
        android:textSize="20sp"/>

</RelativeLayout>